# -------------------------------
# QUESTÃO 1
# -------------------------------
print("\n===== QUESTÃO 1 =====")
x = int(input("Digite um número: "))

if x > 5:
    print("Maior que 5")

print("Fim")



# -------------------------------
# QUESTÃO 2
# -------------------------------
print("\n===== QUESTÃO 2 =====")
n = int(input("Digite um número: "))
cont = 0

while cont < n:
    cont = cont + 1
    print(cont)

print("Fim")



# -------------------------------
# QUESTÃO 3
# -------------------------------
print("\n===== QUESTÃO 3 =====")
n1 = float(input("Digite a primeira nota: "))
n2 = float(input("Digite a segunda nota: "))
n3 = float(input("Digite a terceira nota: "))

m = (n1 + n2 + n3) / 3

if m >= 60:
    print("Aprovado")
elif m >= 40:
    print("Recuperação")
else:
    print("Reprovado")

print("Fim")



# -------------------------------
# QUESTÃO 4
# -------------------------------
print("\n===== QUESTÃO 4 =====")
n = int(input("Digite a quantidade de números: "))
maior = 0

while n > 0:
    x = int(input("Digite um número: "))
    if x > maior:
        maior = x
    n = n - 1

print("O maior número é:", maior)



# -------------------------------
# QUESTÃO 5
# -------------------------------
print("\n===== QUESTÃO 5 =====")
N = int(input("Digite a quantidade de respondentes: "))

soma_idades = 0
for i in range(N):
    idade = int(input(f"Digite a idade do respondente {i+1}: "))
    soma_idades += idade

media = soma_idades / N
print("A média das idades é:", media)



# -------------------------------
# QUESTÃO 6
# -------------------------------
print("\n===== QUESTÃO 6 =====")
N = int(input("Digite a quantidade de experimentos: "))

total = 0
coelhos = 0
ratos = 0
sapos = 0

for i in range(N):
    entrada = input("Digite a quantidade e o tipo de cobaia (ex: 10 C): ").split()
    quantia = int(entrada[0])
    tipo = entrada[1].upper()

    total += quantia

    if tipo == 'C':
        coelhos += quantia
    elif tipo == 'R':
        ratos += quantia
    elif tipo == 'S':
        sapos += quantia

print(f"Total: {total} cobaias")
print(f"Total de coelhos: {coelhos}")
print(f"Total de ratos: {ratos}")
print(f"Total de sapos: {sapos}")

perc_coelhos = (coelhos / total) * 100
perc_ratos = (ratos / total) * 100
perc_sapos = (sapos / total) * 100

print(f"Percentual de coelhos: {perc_coelhos:.2f} %")
print(f"Percentual de ratos: {perc_ratos:.2f} %")
print(f"Percentual de sapos: {perc_sapos:.2f} %")
